{
  "name": "pechkin-messenger",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run build && node ./server/index.js",
    "dev": "parcel src/pages/index.njk --open --no-cache",
    "build": "parcel build src/pages/*.njk --public-url ./ --no-source-maps --no-cache",
    "lint": "eslint src"
  },
  "author": "Yaroslav Starushchenko <starushchenkoyaroslav@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "cssnano": "^4.1.11",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "express": "^4.18.1",
    "nunjucks": "^3.2.3",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-custom-dist-structure": "^1.1.18",
    "parcel-plugin-nunjucks": "^2.2.2",
    "sass": "^1.53.0"
  },
  "engines": {
    "npm": "8.14.0",
    "node": "v14.18.1"
  },
  "customDistStructure": {
    "config": {
      "images": [
        ".jpg",
        ".png",
        ".svg"
      ],
      "js": [
        ".js",
        ".js.map"
      ],
      "css": [
        ".css",
        ".css.map"
      ],
      "fonts": [
        ".ttf",
        ".woff",
        ".eot"
      ]
    },
    "options": {
      "development": true
    }
  }
}
